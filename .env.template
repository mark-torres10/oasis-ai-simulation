# OASIS Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API Base URL (Optional - only needed for proxy services or custom endpoints)
# OPENAI_API_BASE_URL=https://api.openai.com/v1

# Model Configuration (Optional - defaults to GPT-4O-MINI)
# OPENAI_MODEL_TYPE=GPT_4O_MINI

# Database Configuration (Optional)
# DB_PATH=./data/reddit_simulation.db

# Simulation Configuration (Optional)
# MAX_AGENTS=36
# SIMULATION_STEPS=3

# Debug Settings (Optional)
# DEBUG=false
# LOG_LEVEL=INFO
